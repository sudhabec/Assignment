pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/your-org/your-repo.git'
            }
        }
        stage('Test') {
            steps {
                sh 'bash tests/test.sh'
            }
        }
        stage('Deploy') {
            steps {
                sh 'bash scripts/deploy.sh'
            }
        }
    }
}
